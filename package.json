{
  "name": "le3-jam-starter",
  "scripts": {
    "start": "run-s build serve",
    "serve": "http-server ./dist",
    "build": "run-s clean && run-p build:*",
    "watch": "run-s clean && run-p watch:*",
    "clean": "rimraf ./dist",
    "build:html": "cross-env ELEVENTY_ENV=production eleventy",
    "build:assets": "cross-env NODE_ENV=production parcel build ./src/assets/app.css ./src/assets/app.ts --out-dir ./dist/assets --no-source-maps",
    "watch:html": "cross-env ELEVENTY_ENV=development eleventy --serve",
    "watch:assets": "cross-env ELEVENTY_ENV=development parcel watch ./src/assets/app.css ./src/assets/app.ts --out-dir ./dist/assets --no-source-maps --no-hmr",
    "dev": "run-s watch"
  },
  "dependencies": {
    "@11ty/eleventy": "^0.10.0",
    "@fullhuman/postcss-purgecss": "^2.2.0",
    "cross-env": "^7.0.2",
    "http-server": "^0.12.3",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.4",
    "rimraf": "^3.0.2",
    "tailwindcss": "^1.4.3",
    "typescript": "^3.8.3"
  }
}
