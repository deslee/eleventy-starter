{
  "name": "le3-eleventy-starter",
  "scripts": {
    "start": "run-s build && http-server ./dist",
    "watch": "run-s clean && cross-env ELEVENTY_ENV=development run-p watch:*",
    "build": "run-s clean && cross-env ELEVENTY_ENV=production run-p build:*",
    "clean": "rimraf ./dist",
    "watch:eleventy": "eleventy --serve",
    "watch:assets": "parcel watch ./src/assets/app.css ./src/assets/app.ts --out-dir ./dist/assets --no-source-maps --no-hmr",
    "build:eleventy": "eleventy",
    "build:assets": "parcel build ./src/assets/app.css ./src/assets/app.ts --out-dir ./dist/assets --no-source-maps --no-hmr"
  },
  "dependencies": {
    "@11ty/eleventy": "^0.10.0",
    "@fullhuman/postcss-purgecss": "^2.2.0",
    "cross-env": "^7.0.2",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.4",
    "rimraf": "^3.0.2",
    "tailwindcss": "^1.4.3",
    "typescript": "^3.8.3",
    "http-server": "^0.12.3"
  }
}